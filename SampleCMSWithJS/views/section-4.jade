doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title Edit Team Section
    link(rel='stylesheet', type='text/css', href='/css/view.css', media='all')
    script(type='text/javascript', src='/js/view.js')
  body#main_body
    img#top(src='/images/form_images/top.png', alt='')
    #form_container
      h1
        a Edit Team Section
      form#form_970290.appnitro(method='post', action='')
        .form_description
          h2 Edit Team Section
          p Edit Content For Team Section
        ul#team-members-form
          li#li_1.dropDown
            label.description(for='element_1') Team Members 
            div
              select#numberOfTeamMembers.element.select.small(name='element_1')
                option(value='0', selected='selected')
                option(value='1') 1
                option(value='2') 2
                option(value='3') 3
                option(value='4') 4
                option(value='5') 5
                option(value='6') 6
                option(value='7') 7
                option(value='8') 8 
              p#guide_2.guidelines
                small Choose number of team members to modify          
          li.buttons
              input(type='hidden', name='form_id', value='970290')
              input#clearFormSection4.button_text(type='button', name='clear', value='Clear')
              input#modifyFormSection4.button_text(type='button', name='modify', value='Modify')
              input#saveFormSection4.button_text(type='submit', name='submit', value='Submit')        
      #footer
        | Powered by 
        a(href='http://ankitdesigns.com') Ankit Designs
    img#bottom(src='/images/form_images/bottom.png', alt='')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(type='text/javascript', src='/javascripts/update.js')
